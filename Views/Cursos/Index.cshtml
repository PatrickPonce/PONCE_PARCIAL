@model IEnumerable<PONCE_PARCIAL.Models.Curso>

@{
    ViewData["Title"] = "Catálogo de Cursos";
}

<h2 class="mt-4">Catálogo de Cursos</h2>

<form method="get" class="row g-3 mt-3 mb-4">
    <div class="col-md-3">
        <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre" />
    </div>
    <div class="col-md-2">
        <input type="number" name="creditosMin" class="form-control" placeholder="Créditos min" />
    </div>
    <div class="col-md-2">
        <input type="number" name="creditosMax" class="form-control" placeholder="Créditos máx" />
    </div>
    <div class="col-md-2">
        <input type="time" name="horaInicio" class="form-control" />
    </div>
    <div class="col-md-2">
        <input type="time" name="horaFin" class="form-control" />
    </div>
    <div class="col-md-1">
        <button class="btn btn-primary w-100" type="submit">Filtrar</button>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-warning">No se encontraron cursos con los filtros aplicados.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Créditos</th>
                <th>Horario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Codigo</td>
                    <td>@curso.Nombre</td>
                    <td>@curso.Creditos</td>
                    <td>@curso.HorarioInicio.ToString(@"hh\:mm") - @curso.HorarioFin.ToString(@"hh\:mm")</td>
                    <td>
                        <a asp-controller="Cursos" asp-action="Detalle" asp-route-id="@curso.Id" class="btn btn-sm btn-info">
                            Ver Detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
