@model IEnumerable<PONCE_PARCIAL.Models.Curso>

@{
    ViewData["Title"] = "Listado de Cursos";
}

<h1 class="mt-3">Cursos Activos</h1>

<table class="table table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Cupo</th>
            <th>Horario</th>
            <th>Activo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Creditos</td>
                <td>@item.CupoMaximo</td>
                <td>@item.HorarioInicio - @item.HorarioFin</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
            </tr>
        }
    </tbody>
</table>
